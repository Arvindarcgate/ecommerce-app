{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@e-commerce/source"],
    "baseUrl": ".",
    "paths": {
      "@my-monorepo/admin": ["packages/admin/src/index.ts"],
      "@my-monorepo/*": ["packages/*/src"],
      "@e-commerce/packages": ["packages/src/index.ts"]
    }
  }
}
