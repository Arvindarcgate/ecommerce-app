{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@ecommerce/uilibrary": [
        "packages/uilibrary/src/index.ts"
      ],
      "@ecommerce/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}